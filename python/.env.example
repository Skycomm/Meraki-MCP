# Meraki API Configuration
MERAKI_API_KEY=your-meraki-api-key-here

# Optional: Custom API base URL
# MERAKI_BASE_URL=https://api.meraki.com/api/v1

# Cache Configuration
CACHE_TTL=300  # Cache TTL in seconds (default 5 minutes)

# Rate Limiting
RATE_LIMIT_REQUESTS=100  # Max requests per window
RATE_LIMIT_WINDOW=60     # Window size in seconds

# Privileged Users (comma-separated GitHub usernames or email addresses)
PRIVILEGED_USERS=admin@example.com,david,sarah

# Optional: Sentry monitoring
# SENTRY_DSN=your-sentry-dsn-here

# Logging Level
LOG_LEVEL=INFO