{
  "name": "Meraki Network Monitor",
  "nodes": [
    {
      "parameters": {
        "rule": {
          "interval": [
            {
              "field": "minutes",
              "minutesInterval": 5
            }
          ]
        }
      },
      "id": "schedule-trigger",
      "name": "Every 5 minutes",
      "type": "n8n-nodes-base.scheduleTrigger",
      "typeVersion": 1.1,
      "position": [250, 300]
    },
    {
      "parameters": {
        "command": "python -m meraki_mcp.server",
        "cwd": "/path/to/meraki-mcp/python"
      },
      "id": "mcp-command",
      "name": "Execute MCP Tool",
      "type": "n8n-nodes-base.executeCommand",
      "typeVersion": 1,
      "position": [450, 300]
    },
    {
      "parameters": {
        "conditions": {
          "number": [
            {
              "value1": "={{$json[\"loss_percentage\"]}}",
              "operation": "larger",
              "value2": 1
            }
          ]
        }
      },
      "id": "check-loss",
      "name": "High Packet Loss?",
      "type": "n8n-nodes-base.if",
      "typeVersion": 1,
      "position": [650, 300]
    },
    {
      "parameters": {
        "message": "⚠️ Alert: High packet loss detected!\n\nOrganization: {{$json[\"org_name\"]}}\nDevice: {{$json[\"device_serial\"]}}\nUplink: {{$json[\"uplink_name\"]}}\nLoss: {{$json[\"loss_percentage\"]}}%\n\nPlease investigate immediately.",
        "additionalFields": {}
      },
      "id": "slack-alert",
      "name": "Send Slack Alert",
      "type": "n8n-nodes-base.slack",
      "typeVersion": 2.1,
      "position": [850, 200]
    }
  ],
  "connections": {
    "schedule-trigger": {
      "main": [
        [
          {
            "node": "mcp-command",
            "type": "main",
            "index": 0
          }
        ]
      ]
    },
    "mcp-command": {
      "main": [
        [
          {
            "node": "check-loss",
            "type": "main",
            "index": 0
          }
        ]
      ]
    },
    "check-loss": {
      "main": [
        [
          {
            "node": "slack-alert",
            "type": "main",
            "index": 0
          }
        ],
        []
      ]
    }
  }
}