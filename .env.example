# Cisco Meraki API Key (Required)
# You can obtain this from your Meraki Dashboard under Organization > Settings > Dashboard API access
MERAKI_API_KEY=your_meraki_api_key_here

# MCP Profile Selection
# Options: WIRELESS, NETWORK, ORGANIZATIONS, MONITORING, FULL
# WIRELESS: ~136 tools for WiFi management
# NETWORK: ~294 tools for switches, appliances, VPNs
# ORGANIZATIONS: ~126 tools for org administration
# MONITORING: ~147 tools for devices, cameras, sensors
MCP_PROFILE=WIRELESS

# Authentication Tokens for n8n Integration
# Generate secure tokens with: openssl rand -hex 32
MCP_AUTH_TOKEN=meraki-admin-token-2025
MCP_READONLY_TOKEN=meraki-readonly-token-2025

# n8n Web UI Credentials
N8N_USER=admin
N8N_PASSWORD=changeme

# Optional Settings
MCP_READ_ONLY_MODE=false
LOG_LEVEL=INFO
# API_BASE_URL=https://api.meraki.com/api/v1
# TIMEOUT=30  # Request timeout in seconds
